<!-- Flash messages -->
<% if notice %>
  <div class="fixed bottom-4 right-4 bg-green-50 text-green-800 px-4 py-3 rounded-lg shadow-lg" 
       role="alert"
       data-controller="flash"
       data-flash-target="message">
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="fixed bottom-4 right-4 bg-red-50 text-red-800 px-4 py-3 rounded-lg shadow-lg" 
       role="alert"
       data-controller="flash"
       data-flash-target="message">
    <%= alert %>
  </div>
<% end %>