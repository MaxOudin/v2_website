<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- En-tête -->
  <div class="flex flex-col sm:flex-row justify-between items-center mb-12">
    <div class="mb-6 sm:mb-0">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">Mes Projets</h1>
      <p class="mt-2 text-lg text-gray-600">Découvrez mes réalisations récentes</p>
    </div>
    <%= link_to new_project_path, 
        class: "inline-flex items-center px-6 py-3 rounded-xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-105" do %>
      <i class="fas fa-plus mr-2"></i>
      <span>Nouveau Projet</span>
    <% end %>
  </div>

  <!-- Grille de projets -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "group" do %>
        <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-blue-100">
          <!-- Image du projet -->
          <% if project.main_picture.attached? %>
            <div class="aspect-w-16 aspect-h-9 overflow-hidden">
              <%= image_tag project.main_picture, 
                  class: "w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300",
                  alt: "Image du projet #{project.title}" %>
            </div>
          <% else %>
            <div class="aspect-w-16 aspect-h-9 bg-gray-100 flex items-center justify-center">
              <i class="fas fa-image text-4xl text-gray-400"></i>
            </div>
          <% end %>

          <!-- Contenu de la carte -->
          <div class="p-6">
            <!-- Badge type de projet -->
            <div class="mb-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium" 
                    style="background-color: <%= project.color %>15; color: <%= project.color %>; border: 1px solid <%= project.color %>30;">
                <%= project.project_type.titleize %>
              </span>
            </div>

            <!-- Titre et description -->
            <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-200">
              <%= project.title %>
            </h2>
            <p class="text-gray-600 text-sm line-clamp-2">
              <%= project.description %>
            </p>

            <!-- Footer de la carte -->
            <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
              <div class="text-sm text-gray-500">
                <%= project.start_date.strftime("%B %Y") %>
              </div>
              <div class="flex items-center text-blue-600">
                <span class="text-sm font-medium mr-2">Voir le projet</span>
                <i class="fas fa-arrow-right transform group-hover:translate-x-1 transition-transform duration-200"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Message si aucun projet -->
  <% if @projects.empty? %>
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <i class="fas fa-folder-open text-6xl"></i>
      </div>
      <h3 class="text-xl font-medium text-gray-900 mb-2">Aucun projet pour le moment</h3>
      <p class="text-gray-600">Les projets que vous créez apparaîtront ici.</p>
    </div>
  <% end %>
</div>