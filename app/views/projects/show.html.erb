<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- En-tête du projet -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <h1 class="text-4xl font-bold text-gray-900"><%= @project.title %></h1>
      <div class="flex gap-4">
        <%= link_to "Modifier", edit_project_path(@project), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200" %>
        <%= link_to "Retour", projects_path, class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200" %>
      </div>
    </div>
    
    <!-- Badge type de projet et dates -->
    <div class="mt-4 flex items-center gap-4">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium" style="background-color: <%= @project.color %>20; color: <%= @project.color %>">
        <%= @project.project_type.titleize %>
      </span>
      <span class="text-gray-500">
        <%= @project.start_date.strftime("%B %Y") %> - <%= @project.end_date&.strftime("%B %Y") || "En cours" %>
      </span>
    </div>
  </div>

  <!-- Image principale -->
  <% if @project.main_picture.attached? %>
    <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
      <%= image_tag @project.main_picture, class: "w-full h-[400px] object-cover" %>
    </div>
  <% end %>

  <!-- Contenu principal -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Colonne principale -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Description -->
      <% if @project.description.present? %>
        <section class="prose max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900">Description</h2>
          <div class="mt-4 text-gray-600">
            <%= @project.description %>
          </div>
        </section>
      <% end %>

      <!-- Contexte -->
      <% if @project.context.present? %>
        <section class="prose max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900">Contexte</h2>
          <div class="mt-4 text-gray-600">
            <%= @project.context %>
          </div>
        </section>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <!-- Client -->
        <% if @project.client_name.present? %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-500">Client</h3>
            <p class="mt-2 text-base text-gray-900"><%= @project.client_name %></p>
          </div>
        <% end %>

        <!-- Liens -->
        <div class="space-y-4">
          <% if @project.project_url.present? %>
            <a href="<%= @project.project_url %>" target="_blank" rel="noopener" 
               class="flex items-center gap-2 px-4 py-2 w-full bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              <span class="text-gray-700">Voir le projet</span>
            </a>
          <% end %>

          <% if @project.github_url.present? %>
            <a href="<%= @project.github_url %>" target="_blank" rel="noopener" 
               class="flex items-center gap-2 px-4 py-2 w-full bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
              <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
              </svg>
              <span class="text-gray-700">Code source</span>
            </a>
          <% end %>

          <% if @project.demo_url.present? %>
            <a href="<%= @project.demo_url %>" target="_blank" rel="noopener" 
               class="flex items-center gap-2 px-4 py-2 w-full bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              <span class="text-gray-700">Voir la démo</span>
            </a>
          <% end %>
        </div>

        <!-- Position dans le portfolio -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-500">Position dans le portfolio</h3>
          <p class="mt-2 text-base text-gray-900">#<%= @project.position %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Flash messages -->
<% if notice %>
  <div class="fixed bottom-4 right-4 bg-green-50 text-green-800 px-4 py-3 rounded-lg shadow-lg" 
       role="alert"
       data-controller="flash"
       data-flash-target="message">
    <%= notice %>
  </div>
<% end %>
