<% content_for :meta_title, "Développeur Ruby on Rails Expert à Bordeaux | Maxime Oudin" %>
<% content_for :meta_description, "Développeur Ruby on Rails senior spécialisé dans la création d'applications web performantes. Expert en développement full-stack, APIs et solutions sur mesure à Bordeaux. Transformez vos idées en applications web robustes." %>

<!-- Hero Section -->
<main class="relative overflow-hidden" role="main">
  <!-- Fond avec motif et gradient sobre -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-gray-100" aria-hidden="true">
    <div class="absolute inset-0 bg-[radial-gradient(#6b728010_1px,transparent_1px)] [background-size:24px_24px] opacity-30"></div>
  </div>

  <!-- Section Hero -->
  <section class="relative min-h-screen flex items-center md:py-20 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-16 items-center">
        <!-- Contenu principal -->
        <div class="text-center lg:text-left lg:col-span-7">
          <!-- En-tête avec mise en avant Ruby on Rails -->
          <div class="space-y-6">
            <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold tracking-tight">
              <span class="block text-gray-500 text-xl sm:text-2xl font-normal mb-3">Bonjour, je suis</span>
              <span class="text-gray-900">Maxime Oudin</span>
            </h1>
            
            <!-- Spécialisation Ruby on Rails mise en avant -->
            <div class="flex flex-col items-center lg:items-start space-y-4">
              <div class="flex items-center space-x-3">
                <%= image_tag "yellow_logo.svg", class: "w-10 h-10", alt: "Logo Maxime Oudin - Développeur Ruby on Rails Bordeaux" %>
                <span class="text-2xl text-gray-800 font-semibold">Développeur Ruby on Rails</span>
              </div>
              
              <!-- Badges de compétences -->
              <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
                <span class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-full border border-gray-200">
                  <i class="fab fa-ruby mr-2"></i>Ruby on Rails
                </span>
                <span class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-full border border-gray-200">
                  <i class="fab fa-js-square mr-2"></i>JavaScript
                </span>
                <span class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-full border border-gray-200">
                  <i class="fas fa-database mr-2"></i>PostgreSQL
                </span>
              </div>
            </div>
          </div>

          <!-- Description améliorée -->
          <div class="mt-10 space-y-4">
            <p class="text-xl text-gray-700 max-w-3xl mx-auto lg:mx-0 leading-relaxed">
              Je transforme vos <span class="font-bold text-gray-900">idées en applications web robustes</span> avec 
              <span class="font-bold text-gray-900">Ruby on Rails</span> et les technologies modernes. 
              Spécialisé dans le développement <span class="font-semibold text-gray-800">full-stack</span> et les 
              <span class="font-semibold text-gray-800">APIs performantes</span>.
            </p>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto lg:mx-0">
              Basé à <span class="font-semibold text-gray-800">Bordeaux</span>, j'accompagne les startups et entreprises 
              dans la création de solutions web sur mesure, de la conception au déploiement.
            </p>
          </div>

          <!-- Statistiques de crédibilité -->
          <div class="mt-12 grid grid-cols-3 gap-8 max-w-md mx-auto lg:mx-0">
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900"><%= Date.today.year - 2023 %></div>
              <div class="text-sm text-gray-600">Années d'expérience</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900"><%= Project.count %>+</div>
              <div class="text-sm text-gray-600">Projets réalisés</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900">100%</div>
              <div class="text-sm text-gray-600">Satisfaction client</div>
            </div>
          </div>

          <!-- Boutons CTA sobres -->
          <div class="mt-12 flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
            <%= link_to projects_path, 
                class: "inline-flex items-center justify-center px-8 py-4 rounded-xl text-lg font-semibold text-white bg-gray-900 hover:bg-gray-800 transition-all duration-300 shadow-lg hover:shadow-xl", 
                title: "Découvrir mes projets Ruby on Rails" do %>
              <i class="fas fa-code-branch mr-3"></i>
              <span>Voir mes réalisations</span>
              <i class="fas fa-arrow-right ml-3"></i>
            <% end %>

            <a href="#contact" 
               class="inline-flex items-center justify-center px-8 py-4 rounded-xl text-lg font-semibold text-gray-900 bg-white border-2 border-gray-300 hover:border-gray-400 hover:bg-gray-50 transition-all duration-300 shadow-lg hover:shadow-xl">
              <i class="fa-solid fa-envelope mr-3"></i>
              <span>Démarrer un projet</span>
            </a>
          </div>
        </div>

        <!-- Section visuelle avec code Ruby on Rails -->
        <div class="mt-16 lg:mt-0 lg:col-span-5">
          <div class="relative">
            <!-- Terminal avec code Ruby on Rails -->
            <div class="bg-gray-900 rounded-2xl shadow-2xl overflow-hidden">
              <div class="flex items-center px-4 py-3 bg-gray-800 border-b border-gray-700">
                <div class="flex space-x-2">
                  <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                  <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                  <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                </div>
                <div class="ml-4 text-gray-400 text-sm font-mono">Terminal - Ruby on Rails</div>
              </div>
              <div class="p-6 font-mono text-sm">
                <div class="text-green-400 mb-2">$ rails new mon_app</div>
                <div class="text-blue-400 mb-2">=> Création de l'application...</div>
                <div class="text-yellow-400 mb-2">=> Configuration de la base de données</div>
                <div class="text-purple-400 mb-2">=> Installation des gems</div>
                <div class="text-green-400 mb-4">=> Application créée avec succès!</div>
                
                <div class="text-gray-300 mb-2">class ApplicationController &lt; ActionController::Base</div>
                <div class="text-gray-300 ml-4 mb-2">before_action :authenticate_user!</div>
                <div class="text-gray-300 mb-2">end</div>
                
                <div class="text-green-400 mt-4">$ rails server</div>
                <div class="text-blue-400">=> Server démarré sur http://localhost:3000</div>
              </div>
            </div>
            
            <!-- Éléments décoratifs sobres -->
            <div class="absolute -top-4 -right-4 w-6 h-6 bg-gray-400 rounded-full opacity-60"></div>
            <div class="absolute -bottom-4 -left-4 w-4 h-4 bg-gray-500 rounded-full opacity-60"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

