<% content_for :meta_title, "Développeur Web Indépendant à Bordeaux | Maxime Oudin" %>
<% content_for :meta_description, "Expert en développement web Ruby on Rails et JavaScript. Création d'applications web performantes et sur mesure à Bordeaux. Découvrez mes services de développement web." %>

<!-- Hero Section -->
<main class="relative overflow-hidden" role="main">
  <!-- Fond avec motif et gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-indigo-50" aria-hidden="true">
    <div class="absolute inset-0 bg-[radial-gradient(#3b82f620_1px,transparent_1px)] [background-size:20px_20px] opacity-30"></div>
  </div>

  <!-- Section Hero -->
  <section class="relative min-h-screen flex items-center py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-12 items-center">
        <!-- Contenu principal -->
        <div class="text-center lg:text-left lg:col-span-7">
          <!-- Badge statut -->
          <div class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-green-50 text-green-700 border border-green-200 mb-8 animate-fade-in-up shadow-sm">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
            Disponible pour de nouveaux projets
          </div>

          <!-- En-tête -->
          <div class="space-y-6">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
              <span class="block text-gray-600 text-2xl sm:text-3xl font-normal mb-2">Bonjour, je suis</span>
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">Maxime Oudin</span>
            </h1>
            
            <div class="flex items-center justify-center lg:justify-start space-x-3">
              <%= image_tag "yellow_logo.svg", class: "w-8 h-8 animate-float", alt: "Logo Maxime Oudin - Développeur Web Bordeaux" %>
              <span class="text-xl text-gray-700 dark:text-gray-300 font-medium">Développeur Web Indépendant</span>
            </div>
          </div>

          <!-- Description -->
          <p class="mt-8 text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto lg:mx-0">
            Je crée des <span class="font-semibold text-indigo-600 dark:text-indigo-400">applications web sur mesure</span> avec une approche centrée sur l'expérience utilisateur et les performances. Basé à <span class="font-semibold">Bordeaux</span>, je travaille avec des clients dans toute la France.
          </p>

          <!-- Boutons CTA -->
          <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <%= link_to projects_path, 
                class: "inline-flex items-center justify-center px-6 py-3 rounded-xl text-base font-medium text-white bg-gradient-to-r from-indigo-600 to-blue-500 hover:from-indigo-500 hover:to-blue-400 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl", 
                title: "Découvrir mes projets de développement web" do %>
              <i class="fas fa-code-branch mr-2"></i>
              <span>Voir mes projets</span>
            <% end %>

            <a href="#contact" 
               class="inline-flex items-center justify-center px-6 py-3 rounded-xl text-base font-medium text-gray-700 dark:text-white bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 hover:border-indigo-500 dark:hover:border-indigo-500 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
              <i class="fa-solid fa-envelope mr-2"></i>
              <span>Me contacter</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Services -->
  <section class="relative py-20 bg-gradient-to-b from-white to-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">
          Mes Services
        </h2>
        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
          Des solutions web adaptées à vos besoins, de la conception au déploiement.
        </p>
      </div>

      <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Développement Web -->
        <div class="group">
          <div class="relative p-8 bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg hover:border-blue-100 transition-all duration-200">
            <div class="text-blue-600 mb-4">
              <i class="fas fa-code text-3xl"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Développement Web</h3>
            <p class="text-gray-600">
              Création d'applications web performantes et évolutives avec Ruby on Rails et JavaScript.
            </p>
          </div>
        </div>

        <!-- API & Intégrations -->
        <div class="group">
          <div class="relative p-8 bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg hover:border-blue-100 transition-all duration-200">
            <div class="text-blue-600 mb-4">
              <i class="fas fa-plug text-3xl"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">API & Intégrations</h3>
            <p class="text-gray-600">
              Développement d'APIs RESTful et intégration avec des services tiers.
            </p>
          </div>
        </div>

        <!-- Conseil & Formation -->
        <div class="group">
          <div class="relative p-8 bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg hover:border-blue-100 transition-all duration-200">
            <div class="text-blue-600 mb-4">
              <i class="fas fa-chalkboard-teacher text-3xl"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Conseil & Formation</h3>
            <p class="text-gray-600">
              Accompagnement technique et formation sur les technologies web modernes.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Contact -->
  <section id="contact" class="relative py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-8">
          Travaillons ensemble
        </h2>
        <p class="text-lg text-gray-600 mb-12">
          Vous avez un projet ? Je serais ravi d'en discuter et de voir comment je peux vous aider à le réaliser.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="mailto:contact@maximeoudin.fr" 
             class="inline-flex items-center justify-center px-8 py-4 rounded-xl text-base font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 transform hover:scale-105 transition-all duration-200 shadow-md hover:shadow-lg">
            <i class="fa-solid fa-envelope mr-2"></i>
            <span>M'envoyer un email</span>
          </a>
          
          <a href="https://www.linkedin.com/in/maxime-oudin-developer/" 
             target="_blank"
             class="inline-flex items-center justify-center px-8 py-4 rounded-xl text-base font-medium text-gray-700 bg-white border-2 border-gray-200 hover:border-blue-200 transform hover:scale-105 transition-all duration-200 shadow-md hover:shadow-lg">
            <i class="fab fa-linkedin mr-2 text-blue-600"></i>
            <span>Me suivre sur LinkedIn</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</main>
